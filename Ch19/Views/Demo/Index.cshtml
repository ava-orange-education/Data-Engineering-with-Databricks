@model Demo.Models.vmQuery

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="queryText" class="control-label"></label>
                <input asp-for="queryText" class="form-control" />
                <span asp-validation-for="queryText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Run" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@Html.Raw(ViewBag.Result)

